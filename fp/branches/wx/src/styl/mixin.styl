bis($url,$width=100%,$height=100%,x=initial,y=initial)
	background url($url+'@2x.png')
	background-repeat no-repeat
	background-size $width $height
	background-position x y
	@media(-webkit-min-device-pixel-ratio: 3),(min-device-device-pixel-ratio: 3)
		background url($url+'@3x.png')
		background-repeat no-repeat
		background-size $width $height
		background-position x y
df($vertical=stretch,$horizontal=flex-start)
	display flex
	justify-content $horizontal
	align-items $vertical
wh($width,$height=auto)
	width $width
	height $height
sc($size,$color)
	font-size $size
	color $color
// 垂直居中
ct()
	position absolute
	top 50%
	transform translateY(-50%)
// 垂直水平居中
center()
	position absolute
	top 50%
	left 50%
	transform translate(-50%,-50%)
// 下边框1像素
border-1px($left,$right,$color)
	position relative
	&:after
		position absolute
		bottom 0
		left $left
		right $right
		height 1px
		line-height 0
		background $color
		content ''
@media (-webkit-min-device-pixel-ratio: 1.5),(min-device-pixel-ratio: 1.5)
	.border-1px
		&:after
			-webkit-transform: scaleY(0.7) 
			transform: scaleY(0.7)
@media (-webkit-min-device-pixel-ratio: 2),(min-device-pixel-ratio: 2)
	.border-1px
		&:after
			-webkit-transform: scaleY(0.5) 
			transform: scaleY(0.5)
/*单行省略号*/
tit-nowrap()
	overflow hidden
	text-overflow ellipsis
	white-space nowrap
	word-wrap normal
/*多行省略号*/
tit-mutirow-nowrap($line)
	overflow hidden
	text-overflow ellipsis
	display -webkit-box
	-webkit-box-orient vertical
	-webkit-line-clamp $line
	word-break break-all
